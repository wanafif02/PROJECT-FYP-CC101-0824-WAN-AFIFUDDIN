<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272727"
    tools:context=".SignUP">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="411dp"
        android:layout_height="56dp"
        android:background="#FDCA00"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="#272727"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginTop="32dp"
            app:boxStrokeColor="#FFD500" />
    </LinearLayout>

    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/subText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="Create an account to continue"
            android:textColor="#CCCCCC"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="72dp" />

        <EditText
            android:id="@+id/nameUser"
            android:layout_below="@+id/subText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="#404040"/>

        <EditText
            android:id="@+id/unitUser"
            android:layout_below="@+id/nameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Unit Number"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="#404040" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_below="@+id/unitUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone"
        android:textColor="@color/white"
        android:textColorHint="#6A6969"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="381dp" />

        <EditText
            android:id="@+id/eTEmail"
            android:layout_below="@+id/editTextPhone"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHint="#404040" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_below="@+id/eTEmail"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="#6A6969" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_below="@+id/editTextTextPassword"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Re-enter Password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="#6A6969"/>

    <Button
        android:id="@+id/btnSignUp1"
        android:layout_below="@+id/editTextTextPassword2"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FDCA00"
        android:text="Sign Up"
        android:textColor="#1F1F1F"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_below="@+id/btnSignUp1"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="Already have account ? Log In"
            android:textColor="#CCCCCC" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="10dp"
        android:visibility="gone" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>