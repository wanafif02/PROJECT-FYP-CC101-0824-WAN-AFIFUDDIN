<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginStart="20dp">

    <TextView
        android:id="@+id/dateGym1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="Date      :"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/dateGym"
        android:layout_toEndOf="@id/dateGym1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:hint="timeGym"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/timeGym1"
        android:layout_below="@id/dateGym1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="Time      :"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/timeGym"
        android:layout_below="@+id/dateGym1"
        android:layout_toEndOf="@id/timeGym1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:hint="timeGym"
        android:textColor="@color/black"
        android:textSize="16sp"/>

        <TextView
            android:id="@+id/paxGym1"
            android:layout_below="@id/timeGym1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Pax        :"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/paxGym"
            android:layout_below="@+id/timeGym1"
            android:layout_toEndOf="@id/paxGym1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:hint="paxGym"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/statusGym1"
            android:layout_below="@id/paxGym1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Status    :"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/statusGym"
            android:layout_below="@+id/paxGym1"
            android:layout_toEndOf="@id/statusGym1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:hint="statusGym"
            android:textColor="@color/black"
            android:textSize="16sp"/>

